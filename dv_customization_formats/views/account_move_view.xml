<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_delivery_address_form_view" model="ir.ui.view">
        <field name="name">account.move.delivery.address.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="invoice_url" placeholder="URL" readonly="1"/>
                <field name="show_qr_code" readonly="1"/>
                <field name="qr_code_image" widget="image" style="height:100px; width:100px;" 
                       invisible="not show_qr_code" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="sale_order_form_view" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="price_url" placeholder="URL" readonly="1"/>
                <field name="show_qr_code" readonly="1"/>
                <field name="qr_code_image" widget="image" style="height:100px; width:100px;" 
                       invisible="not show_qr_code" readonly="1"/>
            </xpath>

            
        </field>
    </record>

</odoo>
