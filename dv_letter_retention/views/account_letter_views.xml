<odoo>
  <!-- Herencia de la vista formulario -->
  <record id="account_letter_form_inherit" model="ir.ui.view">
    <field name="name">account.letter.form.inherit</field>
    <field name="model">account.letter</field>
    <field name="inherit_id" ref="dv_account_letter._account_letter_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook//page[@name='letter_lines']//field[@name='retention_percent']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
      <xpath expr="//notebook//page[@name='invoice_tab']//field[@name='move_line_id']" position="attributes">
        <attribute name="domain">[
          ('move_type', 'in', (move_invoice_type, 'entry')),
          ('l10n_latam_document_type_id', '=', document_type_id),
          ('partner_id', '=', partner_id),
          ('currency_id', '=', currency_id),
          ('parent_state', '=', 'posted'),
          ('amount_residual', '!=', 0),
          ('move_id.redeemed_state', '!=', 'redeemed'),
          ('move_id.payment_state', '!=', 'paid'),
          ('account_id.account_type', '=', account_type),
          ('l10n_pe_is_withholding_line', '=', False)
        ]</attribute>
    </field>
  </record>
</odoo>
