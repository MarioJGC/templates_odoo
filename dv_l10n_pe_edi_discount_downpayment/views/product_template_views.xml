<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="dv_account_move_global_discount.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='global_discount']" position="attributes">
                <attribute name="invisible">l10n_pe_advance</attribute>
            </xpath>
            <xpath expr="//field[@name='global_discount']" position="before">
                <field name="l10n_pe_advance"/>
                <field name="l10n_pe_charge_discount" required="global_discount"/>
		    </xpath>
        </field>
    </record>
</odoo>