<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_pe_account_withholding_form" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='l10n_pe_group_withholding']" position="after">
                <group id="l10n_pe_group_withholding_to_payment">
                    <group string="Retencion a pagar ($)" name="l10n_pe_group_withholding_to_payment">
                        <field name="amount_retention" readonly="0"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>

</odoo>
