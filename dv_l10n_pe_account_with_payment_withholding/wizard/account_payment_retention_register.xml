<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_retention_payment_wizard_form" model="ir.ui.view">
            <field name="name">view.retention.payment.wizard.form</field>
            <field name="model">retention.payment.wizard.ultimate</field>
            <field name="arch" type="xml">
                <form string="Register Payment" force_save="1">
                    <field name="payment_difference_handling" invisible="1" />
                    <field name="line_ids" invisible="1"/>
                    <field name="can_edit_wizard" invisible="1" force_save="1"/>
                    <field name="can_group_payments" invisible="1" force_save="1"/>
                    <field name="early_payment_discount_mode" invisible="1" force_save="1"/>
                    <field name="payment_type" invisible="1" force_save="1"/>
                    <field name="partner_type" invisible="1" force_save="1"/>
                    <field name="source_amount" invisible="1" force_save="1"/>
                    <field name="source_amount_currency" invisible="1" force_save="1"/>
                    <field name="source_currency_id" invisible="1" force_save="1"/>
                    <field name="company_id" invisible="1" force_save="1"/>
                    <field name="partner_id" invisible="1" force_save="1"/>
                    <field name="country_code" invisible="1" force_save="1"/>
                    <field name="currency_id" invisible="1" />
                    <field name="show_partner_bank_account" invisible="1"/>
                    <field name="require_partner_bank_account" invisible="1"/>
                    <field name="available_journal_ids" invisible="1"/>
                    <field name="available_payment_method_line_ids" invisible="1"/>
                    <field name="available_partner_bank_ids" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="hide_writeoff_section" invisible="1"/>
                    <field name="writeoff_is_exchange_account" invisible="1"/>
                    <field name="untrusted_bank_ids" invisible="1"/>
                    <field name="payment_difference_custom" invisible="1"/>
                    <field name="l10n_pe_withholding_amount_currency" invisible="1"/>
                    <field name="withholding_journal_id" invisible="1"/>
                    

                    <div role="alert" class="alert alert-info" invisible="not hide_writeoff_section">
                        <p><b>Early Payment Discount of <field name="payment_difference"/> has been applied.</b></p>
                    </div>
                    <div role="alert" class="alert alert-warning" invisible="untrusted_payments_count == 0">
                        <span class="fw-bold"><field name="untrusted_payments_count" class="oe_inline"/> out of <field name="total_payments_amount" class="oe_inline"/> payments will be skipped due to <button class="oe_link p-0 align-baseline" type="object" name="action_open_untrusted_bank_accounts">untrusted bank accounts</button>.</span>
                    </div>
                    <group>

                        <group name="group1">
                            <field name="withholding_journal_id" string="Diario" options="{'no_open': True, 'no_create': True}" required="1"/>
                            <field name="payment_method_line_id"
                                   string="Método de pago"
                                   required="1"  options="{'no_create': True, 'no_open': True}"/>
                            <field name="partner_bank_id"
                                   invisible="not show_partner_bank_account or not can_edit_wizard or (can_group_payments and not group_payment)"
                                   readonly="payment_type == 'inbound'"
                                   required="require_partner_bank_account and can_edit_wizard and (not can_group_payments or not group_payment)"
                                    context="{'display_account_trust': True}"/>
                            <field name="group_payment"
                                   string="Agrupar pagos"
                                   invisible="1"/>
                        </group>
                        <group name="group2">
                            <field name="payment_difference_handling" invisible="1" />
                            <field name="l10n_pe_withholding_amount_currency" string="Importe" readonly="0"/>
                            <field name="payment_date" string="Fecha de pago" readonly="1"/>
                            <!-- <button name="reload_method" string="Recargar" type="object" class="btn-secondary" icon="fa fa-refresh"/> -->
                            <field name="communication" string="Memo"
                                   invisible="not can_edit_wizard or (can_group_payments and not group_payment)"/>
                            <field name="l10n_pe_withholding_document_number" invisible="l10n_pe_withholding_amount_currency &lt;= 0" required="l10n_pe_withholding_amount_currency &gt; 0"/>
                        </group>
                    </group>


                    <group name="group3" invisible="l10n_pe_withholding_amount_currency == payment_difference_custom">
                            <label for="payment_difference_calculate" string="Diferencia de pago"/>
                            <div>
                                <field name="payment_difference_calculate" string="Diferencia de pago"/>
                                <field name="payment_difference_handling" widget="radio" nolabel="1"/>
                                <div invisible="payment_difference_handling == 'open'">
                                    <label for="writeoff_account_id" string="Publicar la diferencia en" class="oe_edit_only"/>
                                    <field name="writeoff_account_id"
                                           string="Publicar la diferencia en"
                                           options="{'no_create': True}"/>
                                    <label for="writeoff_label"
                                           class="oe_edit_only"
                                           string="Etiqueta"/>
                                    <field name="writeoff_label"
                                           string="Etiqueta"/>
                                </div>
                            </div>
                    </group>
                    
                    <notebook>
                        <page string="Facturas afectas a retención">
                            <field name="l10n_pe_withholding_subject_invoice_ids" readonly="0" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="amount_total_signed" string="Total en soles" readonly="1"/>
                                    <field name="percent_retention" readonly="1"/>
                                    <field name="amount_retention_optional" string="Monto a pagar" readonly="0"/>
                                    <field name="currency_id" optional="hide" readonly="1"/>
                                    <field name="company_currency_id" optional="hide" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <footer>
                        <button string="Crear Pago Retención" name="create_payments_with_retention" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>