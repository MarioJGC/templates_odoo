<?xml version="1.0"?>
<odoo>

    <record id="generate_task_view_form" model="ir.ui.view">
        <field name="name">generate.task.form</field>
        <field name="model">project.generate.task</field>
        <field name="arch" type="xml">
            <form string="Generar Tareas">
                <group>
                    <label for="number_tasks" class="o_form_label" string="Tareas a crear"/>
                    <field name="number_tasks" nolabel="1"/>
                </group>
                <footer>
                    <button name="action_generate" string="Generar" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>