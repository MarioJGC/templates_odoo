<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.web.window.title</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='account_vendor_bills']" position="inside">
                <setting title="Retenciones" help="Seleccione una cuenta contable para las retenciones">
                    <field name="withholding_account_id"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>