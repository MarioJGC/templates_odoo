<odoo>

    <record id="successive_discounts_view_form" model="ir.ui.view">
        <field name="name">successive.discounts.view.form</field>
        <field name="model">sale.successive.discounts</field>
        <field name="arch" type="xml">
            <form string="Descuentos Sucesivos">
                <script>
                    $(document).ready(function(){
                        $('.modal-dialog').css({'width': '30%', 'height': '50%'});
                    });
                </script>
                <header>
                    <widget name="web_ribbon" text="Pre-espera" bg_color="text-bg-warning" invisible="state != 'pre_onhold'"/>
                    <widget name="web_ribbon" text="En Espera" bg_color="text-bg-info" invisible="state != 'on_hold'"/>
                    <widget name="web_ribbon" text="Confirmado" invisible="state != 'confirmed'"/>
                    <widget name="web_ribbon" text="Rechazado" bg_color="text-bg-danger" invisible="state != 'refused'"/>
                </header>
                <group>
                    <group>
                        <label for="original_price" colspan="2"/>
                        <label for="first_discount"/>
                        <div>  
                            <field name="first_discount" style="width:40%;" readonly="state in ('on_hold')"/>
                            <label for="first_discount" string="%"/>
                        </div>
                        <label for="second_discount"/>
                        <div>
                            <field name="second_discount" style="width:40%;" readonly="state in ('on_hold')"/>
                            <label for="second_discount" string="%"/>
                        </div>
                        <label for="third_discount"/>
                        <div>
                            <field name="third_discount" style="width:40%;" readonly="state in ('on_hold')"/>
                            <label for="third_discount" string="%"/>
                        </div>
                        <label for="final_price" colspan="2"/>
                    </group>
                    <group>
                        <field name="state" invisible="1"/>
                        <field name="original_price" nolabel="1" readonly="1" colspan="2" style="font-weight: bold;"/>
                        <field name="first_discount_amount" nolabel="1" readonly="1" colspan="2"/>
                        <field name="second_discount_amount" nolabel="1" readonly="1" colspan="2"/>
                        <field name="third_discount_amount" nolabel="1" readonly="1" colspan="2"/>
                        <field name="final_price" nolabel="1" readonly="1" colspan="2" style="font-weight: bold;"/>
                    </group>
                </group>
                <footer>
                    <button name="action_apply_first_discount" string="Aplicar Descuento" type="object" class="btn-primary" invisible="second_discount != 0 or third_discount != 0"/>
                    <button string="Guardar" name="action_save_date" type="object" class="btn-primary" invisible="(second_discount == 0 and third_discount == 0 or state in ('pre_onhold','on_hold','refused'))"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>