                        <p><t t-esc="text"/></p>
                        <div t-if="description_field" style="padding: 0; margin: 0">
                            <t t-foreach="description_field.split('\n')" t-as="line">
                                <p t-esc="line" style="padding: 0; margin: 0;"/>
                            </t>
