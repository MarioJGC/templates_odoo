<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dv_sales_document.report_sale_order_template">
        <!-- Agregar el estilo para la fuente aquí -->
        <t t-call="web.html_container">
            <meta charset="UTF-8"/>
            <style>
                @import url('https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;600;700&amp;display=swap');
                body {
                    font-family: 'Source Sans 3', sans-serif;
                    padding: 0;
                    margin: 0;
                    font-size: 14px;
                    line-height: 1.4;
                }
                .page {
                    display: flex;
                    padding: 0;
                    margin: 0;
                }
                .header-logo {
                    width: 100px;
                    height: 100px;
                }
                .fot {
                    right: 40;
                    left: 40;
                    text-align: center;
                    margin-bottom: 0;
                    padding-bottom: 0;
                }
                .page-break {
                    page-break-before: always;
                    margin: 0;
                    padding: 0;
                }
                table {
                    font-size: 14px;
                    line-height: 1.4;
                }
            </style>

