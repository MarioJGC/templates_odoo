                        <table style="width: 100%; border-collapse: collapse; text-align: left; margin-top:0">
                            <thead>
                                <tr>
                                    <th style="border: 1px solid #000; padding: 1px 3px; background-color: #f2f2f2;">Cantidad Unidades</th>
                                    <th style="border: 1px solid #000; padding: 1px 3px; background-color: #f2f2f2;">Descripción</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-if="line.product_uom_qty > 0">
                                        <tr>
                                            <td style="border: 1px solid #000; padding: 1px 3px;">
                                                <span t-field="line.product_uom_qty" t-options="{'widget': 'float', 'precision': 0}"/>
                                                <t t-if="line.product_uom_qty == 1"> Ud</t>
                                                <t t-elif="line.product_uom_qty > 1"> Uds</t>
                                            </td>
                                            <td style="border: 1px solid #000; padding: 1px 3px;">
