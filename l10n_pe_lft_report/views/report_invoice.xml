<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document" inherit_id="l10n_pe_edi.report_invoice_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="web.basic_layout">
                            <t t-call="web.html_container">
                                <div class="header">
                                    <div class="row">
                                        <t t-call="l10n_pe_lft_report.report_general_left_invoice_header"/>
                                        <t t-if="o.company_id.company_head_type  == 'lft'">
                                            <t t-call="l10n_pe_lft_report.report_right_header_invoice_lft"/>
                                        </t>
                                        <t t-if="o.company_id.company_head_type  == 'wurfel'">
                                            <t t-call="l10n_pe_lft_report.report_right_header_invoice_wurfel"/>
                                        </t>
                                    </div>
                                </div>
                                <div class="page">
                                    <t t-set="o" t-value="o.with_context(lang=lang)"/>
                                    <t t-set="forced_vat"
                                       t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->

                                    <t t-if="o.company_id.company_head_type == 'lft'">
                                        <hr style="border-bottom: 1px solid #333; margin-top: 5px;"/>
                                    </t>
                                    <div class="oe_structure"/>

                                    <t t-if="o.company_id.company_head_type  == 'lft'">
                                        <t t-call="l10n_pe_lft_report.report_after_header_invoice_lft"/>
                                    </t>
                                    <t t-if="o.company_id.company_head_type  == 'wurfel'">
                                        <t t-call="l10n_pe_lft_report.report_after_header_invoice_wurfel"/>
                                    </t>
                                    <div class="mt-3 clearfix">
                                        <div class="page mb-4"
                                             style="font-family: Georgia, Times, 'Arial', serif; font-size: 12px;">
                                            <div class="oe_structure"></div>
                                            <t t-set="display_discount"
                                               t-value="any(l.discount for l in o.invoice_line_ids)"/>
                                            <div class="oe_structure"></div>
                                            <t t-if="o.company_id.company_head_type  == 'lft'">
                                                <t t-call="l10n_pe_lft_report.report_table_products_invoice_lft"/>
                                            </t>
                                            <t t-if="o.company_id.company_head_type  == 'wurfel'">
                                                <t t-call="l10n_pe_lft_report.report_table_products_invoice_wurfel"/>
                                            </t>
                                            <div style="page-break-inside: avoid;">
                                                <t t-if="o.company_id.company_head_type  == 'lft'">
                                                    <t t-call="l10n_pe_lft_report.report_table_observ_total_invoice_lft"/>
                                                    <div class="row" style="border-top: 1px solid #a7a9ac; margin-top: 7px; margin-bottom: 7px;"></div>
                                                </t>
                                                <t t-if="o.company_id.company_head_type  == 'wurfel'">
                                                    <t t-call="l10n_pe_lft_report.report_table_observ_total_invoice_wurfel"/>
                                                </t>

                                                <t t-if="o.company_id.company_head_type  == 'lft'">
                                                    <t t-call="l10n_pe_lft_report.report_quotas_invoice_lft"/>
                                                </t>
                                                <t t-if="o.company_id.company_head_type  == 'wurfel'">
                                                    <t t-call="l10n_pe_lft_report.report_quotas_invoice_wurfel"/>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="footer">
                                    <div class="text-center">
                                        <div t-if="report_type == 'pdf'">
                                            PÃ¡gina:
                                            <span class="page"/>
                                            /
                                            <span class="topage"/>
                                        </div>
                                        <div t-if="report_type == 'pdf' and display_name_in_footer" class="text-muted">
                                            <span t-out="o.name">(document name)</span>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                    </t>
                </t>
            </xpath>
        </template>
        <!--        <template id="document_tax_totals" inherit_id="l10n_pe_lft_report.document_tax_totals_template" primary="True"></template>-->
        <template id="document_tax_totals_template">
            <!--
                Generic template to display tax totals in pdf reports.
                Used by invoices, SO and PO.

                ARGUMENTS:
                - tax_totals: dict in the form generated by account.move's _get_tax_totals.
            -->
            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                <tr class="border-black o_subtotal">
                    <td>
                        <!--                        <strong t-out="subtotal['name']">Untaxed Amount</strong>-->
                        <strong t-out="subtotal['name']">SUB TOTAL VENTAS</strong>
                    </td>

                    <td class="text-end">
                        <span
                                t-att-class="oe_subtotal_footer_separator"
                                t-out="subtotal['formatted_amount']"
                        >27.00
                        </span>
                    </td>
                </tr>

                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                <t t-call="account.tax_groups_totals"/>
            </t>

            <tr t-if="'formatted_rounding_amount' in tax_totals and tax_totals['rounding_amount'] != 0">
                <td>Rounding</td>
                <td class="text-end">
                    <span t-out="tax_totals['formatted_rounding_amount']">0</span>
                </td>
            </tr>

            <!--Total amount with all taxes-->
            <tr class="border-black o_total">
                <td>
                    <strong>Total</strong>
                </td>
                <td class="text-end">
                    <span t-out="tax_totals['formatted_amount_total']">31.05</span>
                </td>
            </tr>
        </template>
        <template id="report_invoice" inherit_id="account.report_invoice">
            <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
                <t t-elif="o._get_name_invoice_report() == 'l10n_pe_lft_report.report_invoice_document'"
                   t-call="l10n_pe_lft_report.report_invoice_document"
                   t-lang="lang"/>
            </xpath>
        </template>

    </data>
</odoo>
