    <!--  Parte para listar los productos    -->
    <template id="report_list_service_order_lft">
        <table class="table table-sm table-borderless"
               style="padding-top: 25px;border-bottom: 1px solid #a7a9ac;">
            <t t-set="has_barcode"
               t-value="any(move_line.product_id and move_line.product_id.sudo().barcode for move_line in o.order_line)"/>
            <thead style="background:#d9d9d9; font-family: Calibri, Arial, sans-serif; font-size: 13px; color:#595959;">
                <tr>
                    <th class="text-start" name="th_code_product">
                        <strong>CÓDIGO</strong>
                    </th>
                    <th class="text-start" name="th_desc_product">
                        <strong>DESCRIPCIÓN</strong>
                    </th>
                    <th class="text-start" name="th_um_product">
                        <strong>UNID</strong>
                    </th>
                    <th>
                        <strong>CANT.</strong>
                    </th>
                    <th class="text-end">
                        <strong>VALOR UNIT</strong>
                    </th>
                    <th class="text-end">
                        <strong>VALOR TOTAL</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                <!-- In case you come across duplicated lines, ask NIM or LAP -->
                <t t-set="index" t-value="0"/>
                <t t-set="cnt" t-value="len(o.order_line)"/>
                <t t-if="cnt > 5">
                    <t t-set="remaining_rows" t-value="10 - cnt"/>
                </t>
                <t t-else="">
                    <t t-set="remaining_rows" t-value="5 - cnt"/>
                </t>
                <tr t-foreach="o.order_line" t-as="ml"
                    t-if="o.order_line">
                    <t t-set="index" t-value="index + 1"/>
                    <t t-if="index % 2 == 0">
                        <tr style="background-color: #f2f2f2; font-family: Calibri, Arial, sans-serif; font-size: 13px; color:#2c2b2b; height:80px;">
                            <t t-call="l10n_pe_lft_report.line_product_service_order_lft"/>
                        </tr>
                    </t>
                    <t t-else="">
                        <tr style="font-family: Calibri, Arial, sans-serif; font-size: 13px; color:#2c2b2b; height:80px;">
                            <t t-call="l10n_pe_lft_report.line_product_service_order_lft"/>
                        </tr>
                    </t>

                </tr>
                <!-- Extra empty rows -->
                <t t-foreach="range(remaining_rows)" t-as="i">
                    <t t-set="index" t-value="index + 1"/>
                    <t t-set="is_even" t-value="index % 2 == 0"/>
                    <div>
                        <tr t-att-style="is_even and 'background-color: #f2f2f2; height: 80px;' or 'background-color: #ffffff; height: 80px;'">
                            <td colspan="7"></td>
                        </tr>
                    </div>
                </t>
            </tbody>
        </table>

    </template>
