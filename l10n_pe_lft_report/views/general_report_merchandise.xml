<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--    Parte izquierda-->
    <template id="report_general_left_merchandise_lft_header">
        <div class="col-2 text-start">
            <t t-if="o.company_id.logo">
                <t t-if="report_type == 'html'">
                    <img t-att-src="image_data_uri(o.company_id.logo)"
                         style="max-height: 70%;"
                         alt="Logo"/>
                </t>
                <t t-else="">
                    <img t-att-src="image_data_uri(o.company_id.logo)"
                         style="width: 258px; height: 125px;"
                         alt="Logo"/>
                </t>
            </t>
            <t t-else="">
                <img src="/static/img/img.png" style="width: 5.6cm; height: 2.8cm;" alt="Imagen Alternativa"/>
            </t>
        </div>
        <div class="col-4"
             style="padding: 5px 0 0 75px;">
            <strong style="font-family: Calibri, Arial, sans-serif; font-size: 13px; color:#59525c">
                <span t-field="o.company_id.partner_id.name"/>
            </strong>
            <br/>
            <div t-if="o.company_id.partner_id.vat"
                 style="font-family: Calibri, Arial, sans-serif; font-size: 10px; color:#5f5e5f">
                <strong>RUC:
                    <span t-field="o.company_id.partner_id.vat"/>
                </strong>
            </div>
            <span style="font-family: Calibri, Arial, sans-serif; font-size: 8.5px; color:#677977;"
                  t-field="o.company_id.partner_id.street"/>
            <br/>
            <div style="font-family: Calibri, Arial, sans-serif; font-size: 8.5px; color:#677977;">
                <span t-field="o.company_id.partner_id.city"/>-
                <span t-field="o.company_id.partner_id.state_id"/>-
                <span t-field="o.company_id.partner_id.country_id"/>
                <br/>Teléfono
                <span t-field="o.company_id.partner_id.phone" class="ml-2"/>
                <br/>
                <span t-field="o.company_id.partner_id.email" class="ml-2"/>
                <br/>
                <span t-field="o.company_id.partner_id.website" class="ml-2"/>
            </div>
        </div>
    </template>
