<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--    Parte derecha de orden de compra -->
    <template id="report_right_header_purchase_order_lft">
        <div class="col-6 mt-2 mb-4" style="font-family: Calibri, Times, serif; font-size: 15px; padding-left: 40px;">
            <div style="background: #d9d9d9; color: #595959; padding: 8px 0px; " class="col-12 mb-2 text-center fw-bold">
                <strong t-if="o.type in ['national_merchandise', 'general_merchandise']">
                    ORDEN DE COMPRA
                </strong>
                <strong t-if="o.type == 'imported_merchandise'">
                    PURCHASE ORDER
                </strong>
                <strong t-if="o.type == 'order_service'">
                    ORDEN DE SERVICIO
                </strong>
            </div>
            <div class="row" style="font-size: 12px;">
                <div class="col-6" style="background: #f2f2f2; color: #595959;">
                    <div class="row fw-bold">
                        <div class="col-3"/>
                        <div class="col-6" align="right" t-if="o.state in ['draft', 'sent', 'to approve']" style="margin: 7px 0px;">
                            NUMERO S.P.
                        </div>
                        <div class="col-6" align="right" t-if="o.state in ['purchase', 'done']" style="margin: 7px 0px;">
                            NUMERO O.C.
                        </div>
                        <div class="col-6" align="right" t-if="o.state == 'cancel'" style="margin: 7px 0px;">
                            NUMERO O.C.
                        </div>
                        <div class="col-3"/>
                    </div>
                    <div class="row fw-bold">
                        <div class="col-3"/>
                        <div class="col-6" align="right" style="margin: 7px 0px 0px 0px;">
                            FECHA
                        </div>
                        <div class="col-3"/>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row">
                        <div class="col-3"/>
                        <div class="col-6" align="center" style="margin: 7px 0px;">
                            <span t-if="o.name != '/'" t-field="o.name">INV/2023/0001</span>
                        </div>
                        <div class="col-3"/>
                    </div>
                    <div class="row">
                        <div class="col-3"/>
                        <div class="col-6" align="center" style="margin: 7px 0px 0px 0px;">
                            <t t-if="o.date_order" class="col-3 bm-2">
                                <span t-field="o.date_order" class="m-0" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                            </t>
                        </div>
                        <div class="col-3"/>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="report_right_header_purchase_order_wurfel">
        <div class="col-5 text-center"
             style="padding: 15px 8px 0 8px; border: 1px solid #000;">
            <div style="justify-content: center; font-family: Calibri, Arial, sans-serif; font-size: 22px; color:#595959;">
                <strong class="text-center" style="justify-content: center;">
                    <div>
                        <span t-if="not proforma"></span>
                        <span t-else="">PROFORMA</span>
                        <span t-if="o.state in ['draft', 'sent', 'to approve']">
                            SOLICITUD DE PRESUPUESTO
                        </span>
                        <span t-if="o.state in ['purchase', 'done']">
                            ORDEN DE COMPRA
                        </span>
                        <span t-if="o.state == 'cancel'">
                            ORDEN DE COMPRA CANCELADA
                        </span>
                    </div>
                </strong>
            </div>
            <div class="row" style="padding-top:5px;">
                <div class="col-6 text-end"
                     style="height:30px; padding-right:30px;
                            font-family: Calibri, Arial, sans-serif; font-size: 16px; color:#595959;">
                    <span t-if="o.state in ['draft', 'sent', 'to approve']">
                        <strong class="text-end" style="line-height: 30px;">NUMERO S.P.</strong>
                    </span>
                    <span t-if="o.state in ['purchase', 'done']">
                        <strong class="text-end" style="line-height: 30px;">NUMERO O.C.</strong>
                    </span>
                    <span t-if="o.state == 'cancel'">
                        <strong class="text-end" style="line-height: 30px;">NUMERO O.C.</strong>
                    </span>
                    <br/>
                </div>
                <div class="col-6" style="height:30px; padding-left:45px;">
                    <span t-if="o.name != '/'" t-field="o.name">INV/2023/0001</span>
                </div>
            </div>
            <div class="row">
                <div class="col-6 text-end"
                     style="height:30px; padding-right:20px;">
                    <strong class="text-end"
                            style="font-family: Calibri, Arial, sans-serif; font-size: 16px; color:#595959; line-height: 20px;">
                        FECHA
                    </strong>
                </div>
                <div class="col-6" style="height:20px; padding-left:45px;">
                    <strong style="font-family: Calibri, Arial, sans-serif; font-size: 15px; color:#595959; line-height: 20px;">
                        <span class="m-0" t-esc="o.date_order.strftime('%d/%m/%Y')">
                        </span>
                    </strong>
                </div>
            </div>
        </div>
    </template>

