<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_sale_lft" model="ir.actions.report">
            <field name="name">Quote in PDF lft</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">l10n_pe_lft_report.report_saleorder_document_lft</field>
            <field name="report_file">l10n_pe_lft_report.report_saleorder_document_lft</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>