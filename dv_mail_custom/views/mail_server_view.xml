<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_create_mail_servers" model="ir.actions.server">
        <field name="name">Crear servidores para usuarios</field>
        <field name="model_id" ref="base.model_ir_mail_server"/>
        <field name="state">code</field>
        <field name="code">action = env['ir.mail_server'].create_servers_for_users_from_selected()</field>
    </record>

    <record id="ir_mail_server_list_view_inherit" model="ir.ui.view">
        <field name="name">ir.mail_server.list.inherit</field>
        <field name="model">ir.mail_server</field>
        <field name="inherit_id" ref="base.ir_mail_server_list"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">smtp_pass == False</attribute>
            </xpath>
            <xpath expr="//tree" position="inside">
                <field name="smtp_pass" column_invisible="1"/>
                <header>
                    <button name="%(action_create_mail_servers)d"
                        string="Crear servidores para usuarios"
                        type="action"
                        class="btn-primary"
                        context="{'active_ids': context.get('active_ids', [])}" />
                </header>
            </xpath>
        </field>
    </record>


</odoo>
