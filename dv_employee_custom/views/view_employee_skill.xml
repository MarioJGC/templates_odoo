<odoo>
    <data>
        <record id="view_employee_skill_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.skill.form.inherit</field>
            <field name="model">hr.employee.skill</field>
            <field name="inherit_id" ref="hr_skills.employee_skill_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group//group[2]" position="inside">
                    <field name="archivo" filename="archivo_nombre"/>
                    <field name="archivo_nombre" invisible="1"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                    <field name="fecha_renovacion"/>
                    <field name="nombre_compania"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>


