<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <record id="account_batch_payment_inherit_txt_suppliers" model="ir.ui.view">
              <field name="name">account.batch.payment.inherit.txt.suppliers</field>
              <field name="model">account.batch.payment</field>
              <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
              <field name="arch" type="xml">
                     <xpath expr="//header" position="inside">
                            <button name="button_draft" string="Reestablecer a nuevo" type="object" options="{'invisible':[('state', '!=', 'sent')]}"/>
                     </xpath>
                     <xpath expr="//field[@name='payment_method_id']" position="after">
                            <field name="tlcdt_exonerate_itf"/>
                            <field name="tlcdt_validate_idc"/>
                     </xpath>
              </field>
       </record>
</odoo>