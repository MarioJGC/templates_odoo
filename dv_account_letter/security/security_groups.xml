<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="letter_category" model="ir.module.category">
		<field name="name">Gestión de Letras</field>
        <field name="parent_id" ref="base.module_category_accounting"/>
		<field name="sequence">20</field>
	</record>
    <record id="group_tesorery" model="res.groups">
        <field name="name">Tesorería</field>
        <field name="comment"> Grupo de tesorería con permisos de Contabilidad-Letras</field>
        <field name="category_id" ref="letter_category"/>
    </record>

    <record id="account_move_see_all" model="ir.rule">
        <field name="name">Todos los Asientos</field>
        <field ref="account.model_account_move" name="model_id"/>
        <field name="domain_force">[('move_type', '=', 'entry')]</field>
        <field name="groups" eval="[(4, ref('dv_account_letter.group_tesorery'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="account_move_no_create_except_entry" model="ir.rule">
        <field name="name">No Crear Facturas</field>
        <field ref="account.model_account_move" name="model_id"/>
        <field name="domain_force">[('move_type', '!=', 'entry')]</field>
        <field name="groups" eval="[(4, ref('dv_account_letter.group_tesorery'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="account_move_line_see_all" model="ir.rule">
        <field name="name">Todos los Apuntes</field>
        <field ref="account.model_account_move_line" name="model_id"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('dv_account_letter.group_tesorery'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>