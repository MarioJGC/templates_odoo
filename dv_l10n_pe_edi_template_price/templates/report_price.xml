                                                    <tr class="text-left"
                                                        t-att-style="'border-bottom: none;' if is_last else 'border-color: #a1a4ab;'">
                                                        <td style="border-color: #a1a4ab; font-size:12px">
                                                            &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;<span t-esc="bank.bank_id.name"/>
                                                        </td>
                                                        <td style="border-color: #a1a4ab; font-size:12px">
                                                            &#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;<span t-esc="bank.acc_number"/>
                                                        </td>
                                                    </tr>
                                            </t>
                                        </t>
                                    </table>
                                </div>

                                <div class="row" width="100%">
                                    <div class="column" style="width: 50%; max-height: 140px; border: 1px solid #a1a4ab; padding: 5px; color: #4d4d4d;">
                                        <div style="padding: 5px;">
                                            <p style="color: #4d4d4d; font-size:12px">Observaciones</p>
                                        </div>
                                        <div style="padding: 1px 5px 1px 5px;">
                                            <div style="font-size:12px">
                                                <t t-out="doc.note or ' '"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="column" style="width: 50%; max-height: 140px; border: 1px solid #a1a4ab; border-left: none; padding: 5px;">
                                        <div style="padding: 5px;">
                                            <p style="color: #4d4d4d; font-size:12px">Representante de Ventas</p>
                                        </div>
                                        <div style="padding-top: 1px; margin-top: 0px; text-align: center;">
                                            <div style="text-align: center;">
                                                <p style="margin: 0; color: #4d4d4d; font-size:12px">OFICINA</p>
                                            </div>
                                            <div style="text-align: center;">
                                                <span style="font-weight: normal; color: #4d4d4d; font-size:12px">
                                                    Cel: <t t-esc="doc.user_id.work_phone or '----'"/> 
                                                    Correo: <t t-esc="doc.user_id.email or '----'"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                    </div>
    </template>


    <template id="report_saleorder" inherit_id="sale.report_saleorder_raw">
        <xpath expr="//t[@t-call='sale.report_saleorder_document']" position="replace">
            <t t-if="doc._get_report_base_filename() == 'dv_l10n_pe_edi_template_price.report_pe_price_document'">
                <t t-call="dv_l10n_pe_edi_template_price.report_pe_price_document" t-lang="doc.partner_id.lang"/>
            </t>
        </xpath>
    </template>
        
    <record id="A4_price_format" model="report.paperformat">
        <field name="name">A4-sales</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5.00</field>
        <field name="margin_bottom">40.00</field>
        <field name="margin_left">7.0</field>
        <field name="margin_right">7.0</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

</odoo>