<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_massive_form" model="ir.ui.view">
        <field name="name">massive.payment.register_form</field>
        <field name="model">massive.payment.register</field>
        <field name="arch" type="xml">
            <form string="Register Payment" force_save="1">
                <field name="journal_id" invisible="1" />
                <field name="list_invoices_ids" invisible="1" />
                <field name="amount" invisible="1" />
                <field name="payment_date" invisible="1" />
                <field name="communication" invisible="1" />
                <field name="currency_id" invisible="1" />
                <field name="payment_method_line_ids" invisible="1" />
                <field name="payment_method_line_id" invisible="1" />
                <field name="payment_difference" invisible="1"/>
                <field name="payment_difference_handling" invisible="1"/>
                <field name="writeoff_account_id" invisible="1"/>
                <field name="writeoff_label" invisible="1"/>
                <field name="group_payment" invisible="1"/>
                <field name="state_group" invisible="1"/>
                
                <group>
                    <group name="group1">
                        <field name="journal_id" string="Diario"/>
                        <field name="payment_method_line_id"
                                string="MÃ©todo de pago" required="1"
                                 options="{'no_create': True, 'no_open': True}"/>
                        <field name="group_payment" string="Agrupar pagos" invisible="not state_group"/>
                    </group>
                    <group name="group2">
                        <label for="amount" />
                        <div name="amount_div" class="o_row">
                            <field name="amount" string="Importe" readonly="0"/>
                            <field name="currency_id" readonly="1" required="1" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
                        </div>
                        <field name="payment_date" string="Fecha de pago" readonly="1"/>
                        <field name="communication" string="Memo" readonly="0"/>
                    </group>
                    <group name="group3"
                            invisible="payment_difference == 0.0">
                        <label for="payment_difference"/>
                        <div>
                            <field name="payment_difference"/>
                            <field name="payment_difference_handling" widget="radio" nolabel="1"/>
                            <div invisible="payment_difference_handling == 'open'">
                                <label for="writeoff_account_id" string="Publicar la diferencia en" class="oe_edit_only"/>
                                <field name="writeoff_account_id"
                                        string="Publicar la diferencia en"
                                        options="{'no_create': True}"
                                        required="payment_difference_handling == 'reconcile'"/>
                                <label for="writeoff_label"
                                        class="oe_edit_only"
                                        string="Etiqueta"/>
                                <field name="writeoff_label"
                                        required="payment_difference_handling == 'reconcile'"/>
                            </div>
                        </div>
                    </group>
                </group>

                <notebook>
                    <page string="Facturas a pagar">
                        <field name="list_invoices_ids">
                            <tree editable="bottom">
                                <field name="name" readonly="1"/>
                                <field name="amount_residual" readonly="1" string="Monto"/>
                                <field name="amount_to_payment" string="Monto a pagar" readonly="0"/>
                                <field name="currency_id" optional="hide" readonly="1"/>
                                <field name="company_currency_id" optional="hide" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button string="Crear Pago" name="execute_register_payment" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>
