<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_request_data_form" model="ir.ui.view">
            <field name="name">request.data.form</field>
            <field name="model">request.data</field>
            <field name="arch" type="xml">
                <form string="Register Payment" force_save="1">
                    <field name="payment_date_req" invisible="1" />
                    <field name="currency_id" invisible="1"/>

                    <group>
                        <group name="group1">
                            <field name="payment_date_req" string="Fecha de pago" required="1"/>
                        </group>
                        <group name="group1">
                            <field name="currency_id" string="Moneda de pago" required="1"/>
                        </group>
                    </group>

                    <footer>
                        <button string="Continuar" name="set_date_currency_and_register_payment" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>

</odoo>
