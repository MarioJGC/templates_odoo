<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <template id="report_move_line_pdf_template">
    <t t-call="web.html_container">
      <meta charset="UTF-8"/>
        <t t-foreach="docs" t-as="o">
            <!--Encabezado-->
            <div style="background-color: #D3D3D3; padding: 10px; margin-bottom: 20px;">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <!-- Título centrado -->
                    <div style="text-align: center; flex-grow: 1;">
                        <h2 style="margin: 0;">Reporte de Seguimiento</h2>
                    </div>
                    <!-- Datos de la compañía a la izquierda -->
                    <div style="text-align: left;">
                        <p style="margin: 0;"><t t-esc="o.env.company.name"/></p>
                        <p style="margin: 0;"><t t-esc="o.env.company.country_id.name"/></p>
                        <p style="margin: 0;"><t t-esc="o.env.company.vat"/></p>
                        <p style="margin: 0;">Cliente: <t t-esc="o.name"/></p>
                    </div>
                </div>
            </div>
            <div class="container">
                <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                    <thead>
                        <tr style="background-color: #D3D3D3; border-bottom: 1px solid #ddd;">
                            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Fecha Emisión</th>
                            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">N° Documento</th>
                            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Fecha Vencimiento</th>
                            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Importe en $</th>
                            <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Importe en S/</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.unreconciled_aml_ids.sorted(key=lambda l: l.new_date, reverse=True)" t-as="line">
                            <td style="border: 1px solid #ddd; padding: 8px;"><t t-esc="line.new_date.strftime('%d/%m/%Y') if line.new_date else ''"/></td>
                            <td style="border: 1px solid #ddd; padding: 8px;"><t t-esc="line.new_move_name"/></td>
                            <td style="border: 1px solid #ddd; padding: 8px;"><t t-esc="line.date_maturity.strftime('%d/%m/%Y') if line.date_maturity else ''"/></td>
                            <td style="border: 1px solid #ddd; padding: 8px;">$ <t t-esc="line.amount_usd"/></td>
                            <td style="border: 1px solid #ddd; padding: 8px;">S/ <t t-esc="line.amount_pen"/></td>
                        </tr>
                    </tbody>
                </table>
                <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                    <tfoot>
                        <tr>
                            <td style="padding: 8px; width: 18.5%;"></td>
                            <td style="padding: 8px; width: 18.5%;"></td>
                            <td style="background-color: #D3D3D3 border: 1px solid #ddd; padding: 8px; text-align: right; width: 26%;">Total</td>
                            <td style="border: 1px solid #ddd; padding: 8px; width: 18.5%;">$ <t t-esc="round(sum(line.amount_usd for line in o.unreconciled_aml_ids), 2)"/></td>
                            <td style="border: 1px solid #ddd; padding: 8px; width: 18.5%;">S/ <t t-esc="round(sum(line.amount_pen for line in o.unreconciled_aml_ids), 2)"/></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </t>
    </t>
  </template>
</odoo>