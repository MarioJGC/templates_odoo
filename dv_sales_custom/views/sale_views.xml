<odoo>
    <record id="sale_custom_view_form" model="ir.ui.view">
        <field name="name">sale.custom.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="before">
                <button name="action_open_product_selector"
                        type="object"
                        string="Seleccionar Productos"
                        class="oe_highlight"
                        context="{'default_pricelist_id': pricelist_id}"/>
            </xpath>
        </field>
    </record>
</odoo>