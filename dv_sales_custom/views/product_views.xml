<odoo>    

    <record id="many_product_tree_view" model="ir.ui.view">
        <field name="name">many.product.tree</field>
        <field name="model">product.template</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Productos">
                <header>
                    <button name="action_add_products_to_order"
                    type="object"
                    string="Añadir Productos"
                    class="oe_highlight"/>
                </header>
                <field name="name"/>
                <field name="currency_usd_id" column_invisible="True"/>
                <field name="pricelist_" string="Precio" widget='monetary' options="{'currency_field': 'currency_usd_id'}"/>
                <field name="standard_price" groups="hide_cost_price.groups_view_cost_price"/>
                <field name="qty_available"/>
                <field name="uom_id"/>
            </tree>
        </field>
    </record>
    

    <record id="many_product_tree_view_purchase" model="ir.ui.view">
        <field name="name">many.product.tree</field>
        <field name="model">product.template</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree string="Productos">
                <header>
                    <button name="action_add_products_to_purchase"
                    type="object"
                    string="Añadir Productos"
                    class="oe_highlight"/>
                </header>
                <field name="name"/>
                <field name="currency_usd_id" column_invisible="True"/>
                <field name="pricelist_" string="Precio" widget='monetary' options="{'currency_field': 'currency_usd_id'}"/>
                <field name="standard_price" groups="hide_cost_price.groups_view_cost_price"/>
                <field name="qty_available"/>
                <field name="uom_id"/>
            </tree>
        </field>
    </record>

    <record id="product_template_inherit_tree_view" model="ir.ui.view">
        <field name="name">product.template.inherit.tree.view</field>
        <field name="model">product.template</field>
        <field name="priority" eval="1"/>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="currency_usd_id" column_invisible="True"/>
                <field name="pricelist_" string="Precio" widget='monetary' options="{'currency_field': 'currency_usd_id'}" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="replace">
                <field name="list_price" string="Anterior Precio de Venta" widget='monetary' options="{'currency_field': 'currency_id'}" optional="hide" decoration-muted="not sale_ok"/>
            </xpath>
        </field>
    </record>

    
    <record id="sale_inherit_form_view" model="ir.ui.view">
        <field name="name">product.template.inherit.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/control" position="replace">
                <control/>
            </xpath>
        </field>
    </record>

</odoo>
